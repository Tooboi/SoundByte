      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css'
      integrity='sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    />
    <link rel='icon' href='/images/music-cd.svg' type='image/x-icon' />
    <link rel='stylesheet' href='/css/style.css' />

    <title>Sound Byte</title>
  </head>

  <body class="d-flex flex-column min-vh-100">
    <nav class='navbar sticky-top mb-3'>
      <div class='container-fluid d-flex justify-content-center justify-content-sm-between flex-column flex-sm-row'>
        <div class="d-flex">
        <a class="logo">
        <h2 class='m-0'><a
            href='/'
            class='text-decoration-none title-logo'
          >Sound Byte</a></h2>
        </div>
        <form class='d-flex align-items-center mb-0'>
          {{#if logged_in}}
            <a
              href='/dashboard'
              class='text-decoration-none mx-2 me-2 mb-0'
            ><b>Profile</b></a>
            <a href='/' class='text-decoration-none mx-2 mb-0'><b>Feed</b></a>
            <a
              href='/dashboard/create'
              class='text-decoration-none mx-2 mb-0'
            ><b>Upload</b></a>
            <button
              class='btn btn-secondary ms-4 mb-0'
              id='logout'
            >Logout</button>

          {{else}}
            <a href='/signup' class='signup text-decoration-none'><b>Sign-up</b></a>
            <a href='/login' class='login text-decoration-none'><b>Login</b></a>
          {{/if}}
        </form>
      </div>
    </nav>
